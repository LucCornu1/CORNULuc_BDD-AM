        android:allowBackup="true"
        android:icon="@drawable/folder_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/folder_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.CORNULuc_Persistance_BDDMySQL"
        tools:targetApi="n">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity">
        </activity>
        <activity android:name=".ConnectedActivity">
        </activity>
        <activity android:name=".RechercheActivity">
        </activity>
    </application>

</manifest>